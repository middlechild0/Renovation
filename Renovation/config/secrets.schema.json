{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Secrets Configuration Schema",
  "type": "object",
  "required": ["apis", "databases", "services"],
  "properties": {
    "apis": {
      "type": "object",
      "required": ["foursquare"],
      "properties": {
        "foursquare": {
          "type": "object",
          "required": ["api_key", "rate_limit"],
          "properties": {
            "api_key": {"type": "string", "pattern": "^fsq_.*"},
            "rate_limit": {"type": "integer", "minimum": 1},
            "endpoint": {"type": "string", "format": "uri"}
          }
        },
        "tomtom": {
          "type": "object",
          "properties": {
            "api_key": {"type": "string"},
            "rate_limit": {"type": "integer", "minimum": 1}
          }
        },
        "yelp": {
          "type": "object",
          "properties": {
            "api_key": {"type": "string"},
            "rate_limit": {"type": "integer", "minimum": 1}
          }
        },
        "vercel": {
          "type": "object",
          "properties": {
            "token": {"type": "string"},
            "project": {"type": "string"}
          }
        }
      }
    },
    "databases": {
      "type": "object",
      "properties": {
        "sqlite": {"type": "object"},
        "supabase": {"type": "object"}
      }
    },
    "services": {
      "type": "object",
      "properties": {
        "stripe": {
          "type": "object",
          "properties": {
            "secret_key": {"type": "string"},
            "price_id": {"type": "string"}
          }
        }
      }
    }
  }
}
